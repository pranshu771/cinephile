<html>
    <head>
        <title>Notifications</title>
        <link rel="stylesheet" href="/src/css/navbar.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <style>
            #header-sm-md {
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.1);
                padding: 10px;
            }
            #notifs img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                
            }
        </style>
    </head>
    <body>

        <div class="row show-on-small hide-on-med-and-up" id="header-sm-md">
            <div class="col s1 left-align">
                <i class="material-icons" style="color: black;cursor: pointer;" onclick="(function(){window.history.back()}())">arrow_back</i>
            </div>
            <span class="col s11 left-align" style="font-weight: bold;font-size: 110%;">Notifications</span>
        </div>

        <div class="top-app-bar z-depth-3 hide-on-med-and-down">
            <div class="row">
                <div class="col l2 left-align"><a href="#"><i class="material-icons">home</i></a></div>
                <div class="col l6 hide-on-med-and-down" id="searchbar">
                <input class="browser-default" type="text">
                <button class="waves-effect"><i class="material-icons">search</i></button>
                </div>
                
                <div class="col l2 center-align person"><a href="#"><i class="material-icons">person</i></a></div>
                <div class="col l2 right-align"><a href="#"><i class="material-icons">group</i></a></div>
            </div>
        </div>

        <div id="notifs">
            <%data.forEach(item => {%>
                
                <div class="row" style="margin-bottom: 40px;cursor: pointer;">
                    <div class="col l3 s3 m3">
                        <img src="/src/images/placeholder.png" style="cursor: pointer;">
                    </div>
                    <div class="col l6 s6 m6">
                        <span style="font-weight: 600;"><%=item.notification.message%></span>
                    </div>
                    <div class="col l3 s3 m3">
                        <%if(item.notification.subjectImage === null) {%>
                            <img src="src/images/placeholder.png">
                        <%}
                        else {%>
                            <img src="https://image.tmdb.org/t/p/w500<%=item.notification.subjectImage%>">
                        <%}%>
                        
                    </div>
                    
                </div>
            <%})%>
        </div>
    </body>
</html>